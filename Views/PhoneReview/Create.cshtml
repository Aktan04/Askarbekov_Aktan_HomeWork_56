@model PhoneReview

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Create</h2>

    <form asp-action="Create" method="post">
        @Html.ValidationSummary(true)
        <input type="hidden" asp-for="PhoneId"/>
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Имя пользователя</label>
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReviewText" class="control-label">Текст отзыва</label>
            <textarea asp-for="ReviewText" class="form-control" rows="5"></textarea>
            <span asp-validation-for="ReviewText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="control-label">Оценка</label>
            @Html.DropDownListFor(model => model.Rating, Enumerable.Range(0, 6).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "-- Выберите оценку --", new { @class = "form-control" })
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
@section Scripts{
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

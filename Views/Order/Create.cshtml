@model Order

@{
    ViewBag.Title = "Заказать смартфон";
    Layout = "_Layout";
}

<div class="container">
    <h2>Заполните форму для заказа</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" asp-controller="Order" method="post">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="Name">Имя покупателя</label>
                    <input disabled type="text" value="@User.Identity.Name" class="form-control">
                    <input asp-for="Name" type="hidden" value="@User.Identity.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Address">Адрес доставки</label>
                    <input asp-for="Address" type="text" class="form-control">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ContactPhone">Номер телефона</label>
                    <input asp-for="ContactPhone" type="text" class="form-control">
                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="PhoneId">Смартфон</label>
                    <input disabled type="text" value="@Model.Phone.Name" class="form-control">
                    <input asp-for="PhoneId" type="hidden" value="@Model.Phone.Id">
                </div>
                <button type="submit" class="btn btn-primary">Заказать</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
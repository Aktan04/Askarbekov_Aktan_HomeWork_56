@model List<User>

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}

<h2>Users</h2>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("admin"))
    {
        <li class="nav-item">
            <a class="btn btn-primary mb-3" asp-action="Register" asp-controller="Account">Добавить пользователя</a>
        </li>
    }
}


<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Пользователи еще не добавлены</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in @Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Password</td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (User.IsInRole("admin"))
                                    {
                                        <a asp-action="Edit" asp-controller="Account" asp-route-Id="@user.Id" class="btn btn-danger">Редактировать</a>
                                        <a asp-action="Delete" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-danger">Удалить пользователя</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
